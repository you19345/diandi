    <include refid="Blob_Column_List" />
    from news
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select <include refid="newsAll"></include> from diandi.news
    <where>
      <if test="id">
        id=#{id}
      </if>
      <if test="type">
        and type_id=#{type}
      </if>
      <if test="content">
        and content like #{content}
      </if>
    </where>
    order by id desc
