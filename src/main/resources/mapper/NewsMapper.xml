  </update>
  <update id="updateByPrimaryKey" parameterType="com.diandi.news.entity.News">
    update news
    set picture_url = #{pictureUrl,jdbcType=VARCHAR},
      type_id = #{typeId,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>

