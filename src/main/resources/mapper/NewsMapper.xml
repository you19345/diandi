    values (#{id,jdbcType=INTEGER}, #{pictureUrl,jdbcType=VARCHAR}, #{typeId,jdbcType=INTEGER}, 
      #{content,jdbcType=LONGVARCHAR}, #{userId,jdbcType=INTEGER})
